APP_NAME="A Crazy Day in Accra"
APP_ENV=local
APP_KEY=
APP_DEBUG=true
APP_URL=http://crazyday.test

APP_LOCALE=en
APP_FALLBACK_LOCALE=en
APP_FAKER_LOCALE=en_US

APP_MAINTENANCE_DRIVER=file
# APP_MAINTENANCE_STORE=database

# PHP_CLI_SERVER_WORKERS=4

BCRYPT_ROUNDS=12

LOG_CHANNEL=stack
LOG_STACK=single
LOG_DEPRECATIONS_CHANNEL=null
LOG_LEVEL=debug


# Database configuration
# Use sqlite for local development, pgsql for production
DB_CONNECTION=pgsql
DB_HOST=postgres
DB_PORT=5432
DB_DATABASE=your_db_name
DB_USERNAME=your_db_user
DB_PASSWORD=your_db_password

# For local development with SQLite, uncomment below:
# DB_CONNECTION=sqlite
# DB_DATABASE=/absolute/path/to/database.sqlite

# For local development with MySQL, uncomment below:
# DB_CONNECTION=mysql
# DB_HOST=127.0.0.1
# DB_PORT=3306
# DB_DATABASE=laravel
# DB_USERNAME=root
# DB_PASSWORD=

# ============================================================================
# SESSION, QUEUE, CACHE CONFIGURATION
# ============================================================================
# LOCAL: Use 'database' for all (simpler, no Redis needed)
# PRODUCTION: Use 'redis' for all (faster, handles high concurrency)

# For local development:
# SESSION_DRIVER=database
# QUEUE_CONNECTION=database
# CACHE_STORE=database

# For production (RECOMMENDED):
SESSION_DRIVER=redis
SESSION_LIFETIME=120
SESSION_ENCRYPT=false
SESSION_PATH=/
SESSION_DOMAIN=null

BROADCAST_CONNECTION=log
FILESYSTEM_DISK=local
QUEUE_CONNECTION=redis

CACHE_STORE=redis
CACHE_PREFIX=acrazyday_

MEMCACHED_HOST=127.0.0.1

# Redis Configuration
REDIS_CLIENT=phpredis
REDIS_HOST=127.0.0.1
REDIS_PASSWORD=null
REDIS_PORT=6379

# ============================================================================
# EMAIL CONFIGURATION (Brevo SMTP)
# ============================================================================
MAIL_MAILER=smtp
MAIL_SCHEME=tls
MAIL_HOST=smtp-relay.brevo.com
MAIL_PORT=587
MAIL_USERNAME=your_brevo_sender_email@example.com
MAIL_PASSWORD=your_brevo_smtp_password_here
MAIL_FROM_ADDRESS="noreply@acrazydayinaccra.com"
MAIL_FROM_NAME="A Crazy Day in Accra"

# Brevo API Key for transactional emails and contact management
BREVO_API_KEY=your_brevo_api_key_here

# ============================================================================
# PAYMENT GATEWAY CONFIGURATION (Paystack)
# ============================================================================
PAYSTACK_MODE=test
PAYSTACK_PUBLIC_KEY=pk_test_your_public_key_here
PAYSTACK_SECRET_KEY=sk_test_your_secret_key_here
PAYSTACK_CURRENCY=GHS
PAYSTACK_CALLBACK_URL=http://crazyday.test/payment
PAYSTACK_WEBHOOK_URL=http://crazyday.test/webhooks/paystack

# ============================================================================
# AWS CONFIGURATION (Optional - for future S3 storage)
# ============================================================================
AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=
AWS_DEFAULT_REGION=us-east-1
AWS_BUCKET=
AWS_USE_PATH_STYLE_ENDPOINT=false

VITE_APP_NAME="${APP_NAME}"

# ============================================================================
# VIDEO CDN CONFIGURATION (Bunny CDN)
# ============================================================================
# Bunny CDN is used for video hosting, streaming, and storage
# Get these from your Bunny account dashboard (bunny.net)
BUNNY_ACCESS_KEY=your_bunny_api_key_here
BUNNY_LIBRARY_ID=your_bunny_library_id_here
BUNNY_PULL_ZONE=your_bunny_pull_zone_hostname_here
BUNNY_STORAGE_ZONE=your_bunny_storage_zone_name_here
BUNNY_SIGNING_KEY=your_bunny_token_security_key_here

# ============================================================================
# SMS CONFIGURATION (mNotify)
# ============================================================================
# mNotify is used for transactional SMS (OTP, notifications)
# Get API key from https://mnotify.com
MNOTIFY_API_KEY=your_mnotify_api_key_here
MNOTIFY_SENDER_ID=YourBusinessName

# ============================================================================
# DEVELOPER SETTINGS
# ============================================================================
# Password required to access environment settings page (admin panel)
# Change this to a secure password in production
DEV_PASSWORD=iamCr00t$
# Developer phone number for OTP verification (optional alternative to password)
DEV_PHONE=+233544515261

# ============================================================================
# ANALYTICS CONFIGURATION
# ============================================================================
GOOGLE_ANALYTICS_MEASUREMENT_ID=
GOOGLE_TAG_ID=
META_PIXEL_ID=

# ============================================================================
# SSR CONFIGURATION
# ============================================================================
INERTIA_SSR_ENABLED=false
INERTIA_SSR_URL=http://127.0.0.1:13714

# ============================================================================
# AUTHENTICATION CONFIGURATION
# ============================================================================
# Fortify uses these defaults, override if needed:
# AUTH_GUARD=web
# AUTH_PASSWORD_BROKER=users
# AUTH_MODEL=App\Models\User
# AUTH_PASSWORD_RESET_TOKEN_TABLE=password_reset_tokens
# AUTH_PASSWORD_TIMEOUT=10800 (3 hours in seconds)
